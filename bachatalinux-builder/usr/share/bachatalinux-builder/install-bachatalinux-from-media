mount_media() {
for dev in /dev/*; do
	if [ -b ${dev} ] ; then 
        if [ ! -L $dev ]; then
        	if mount -t ${FSTYPE} -o ro ${dev} $1 2>/dev/null ; then
          		if [ -f ${1}/bachatalinux.cgz ] ; then
				    MYDEV=${dev}
				    return 0
                else
                 	umount $1
                fi
            fi
        fi
    fi
done
return 1
}

FSTYPE=$1

MEDIAROOT=/media
TARGET=/mnt

echo
echo
echo
echo
echo
echo
echo
echo
echo "Installing Bachata Linux..."

until mount_media ${MEDIAROOT}; do sleep 1; done

install-bachatalinux ${MEDIAROOT}/bachatalinux.cgz ${MYDEV} ${TARGET}
if [ $? != 0 ]; then
	read -p "Unable to mount target, press ENTER to reboot and try again"
	umount ${MEDIAROOT}
    reboot
fi

umount ${MEDIAROOT}
eject -p ${MYDEV}

echo
read -p "Press ENTER to reboot"
reboot

